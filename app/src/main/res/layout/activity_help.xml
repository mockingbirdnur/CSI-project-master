<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sc"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back4"
    tools:context="com.example.aidana.project.HelpActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="368dp"
            android:layout_height="75dp"
            android:text="ToDoList App"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="65dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="95dp"

            android:text="This app helps to plan the tasks,and implement them"
            android:textColor="#fff"
            android:textSize="50dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="144dp"

            android:layout_above="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp">
            <Button
                android:id="@+id/button10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/buttonshape"
                android:text="+"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="270dp"
                android:layout_height="150dp"

                android:text="Use this button to add new task into the list"
                android:textColor="#fff"
                android:textSize="40dp"
                android:layout_toRightOf="@+id/button10"
                android:layout_toEndOf="@+id/button10"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="138dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="17dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="270dp"
                android:layout_height="100dp"

                android:text="CheckBox can be Checked or Unchecked. If your task is done, just tap on Checkbox, and set Checked"
                android:textColor="#fff"
                android:textSize="40dp"
                android:layout_marginLeft="38dp"
                android:layout_marginStart="38dp"
                android:layout_alignTop="@+id/checkBox"
                android:layout_toRightOf="@+id/checkBox"
                android:layout_toEndOf="@+id/checkBox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="156dp">

            <Button
                android:id="@+id/button11"
                android:layout_width="60dp"
                android:layout_height="60dp"


                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/camera"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="270dp"
                android:layout_height="125dp"

                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/button11"
                android:layout_toRightOf="@+id/button11"
                android:text="This button will open the camera and take a photo if you need to add to your task for remember"
                android:textColor="#fff"
                android:textSize="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"

                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/gallery" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_toRightOf="@+id/imageView2"
                android:text="If you tap to this button, you will go into the gallery of your Phone, and you can take the one image which will associates with your task"
                android:textColor="#fff"
                android:textSize="40dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>